# Portfolio Tracker - Environment Variables Template
# Copy this file to .env for development
# DO NOT commit .env files to git!

# ===================================
# BASIC CONFIGURATION
# ===================================
# Backend API base URL - Point to your backend server
EXPO_PUBLIC_API_URL=http://localhost:8080

# App Configuration
EXPO_PUBLIC_APP_NAME="Portfolio Tracker"
EXPO_PUBLIC_APP_VERSION=1.0.0

# ===================================
# EXPO CONFIGURATION
# ===================================
# Your Expo project configuration (get from https://expo.dev)
EXPO_PROJECT_ID=your-expo-project-id-here
EAS_PROJECT_ID=your-eas-project-id-here

# ===================================
# AUTHENTICATION (Optional)
# ===================================
# Google Sign-In Configuration (get from Google Cloud Console)
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# ===================================
# FEATURE FLAGS
# ===================================
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_DARK_MODE=true

# ===================================
# DEVELOPMENT SETTINGS
# ===================================
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_MOCK_API=false

# ===================================
# BUILD CONFIGURATION
# ===================================
# Bundle identifiers (customize for your app)
EXPO_PUBLIC_IOS_BUNDLE_ID=com.example.portfoliotracker
EXPO_PUBLIC_ANDROID_PACKAGE=com.example.portfoliotracker
EXPO_PUBLIC_SUPPORT_EMAIL=support@example.com

# Deep linking URL scheme
EXPO_PUBLIC_URL_SCHEME=portfolio-tracker

# ===================================
# OPTIONAL SERVICES
# ===================================
# Firebase (for notifications, analytics)
# EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
# EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project
# EXPO_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id

# Sentry (for error tracking)
# EXPO_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ===================================
# ENVIRONMENT EXAMPLES
# ===================================
# Development
# EXPO_PUBLIC_API_URL=http://localhost:8080
# EXPO_PUBLIC_DEBUG_MODE=true

# Production
# EXPO_PUBLIC_API_URL=https://your-api-domain.com
# EXPO_PUBLIC_DEBUG_MODE=false